mixin post(paste, handle, did)
  div.post
    p
      a(href=`/p/${paste.shortUrl}`)
        | #{paste.title}
      p.post-info
        | by 
        a(href=`/u/${did}`)
          | @#{handle}
        | &nbsp;·
        | #{timeDifference(now, Date.parse(paste.createdAt))} ago
        | ·
        | #{paste.lang}
        | ·
        | #{paste.code.split('\n').length} loc

