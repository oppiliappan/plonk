- var now = new Date()
- var handle = didHandleMap[authorDid]
include ../mixins/head
include ../mixins/header
include ../mixins/footer
include ../mixins/utils
include ../mixins/post
doctype html
html
  +head(handle)
  body
    main#content
      +header(ownDid, didHandleMap)
      h1 plonks by @#{handle}
      div.timeline
        each paste in pastes
          +post(paste, handle, authorDid)

      +footer()
